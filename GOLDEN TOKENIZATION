    const translations = {
      en: {
        title: "GOLDEN TOKENIZATION",
        description: "A pioneering project focused on the future of digital asset tokenization and blockchain innovation.",
        whitepaper: "Download Whitepaper"
      },
      ar: {
        title: "ترميز جولدن - GOLDEN TOKENIZATION",
        description: "مشروع رائد يركز على مستقبل ترميز الأصول الرقمية وابتكارات البلوكشين.",
        whitepaper: "تحميل الورقة البيضاء"
      }
    };

    function setLang(lang) {
      document.getElementById('title').textContent = translations[lang].title;
      document.getElementById('description').textContent = translations[lang].description;
      document.getElementById('whitepaper').textContent = translations[lang].whitepaper;
    }
